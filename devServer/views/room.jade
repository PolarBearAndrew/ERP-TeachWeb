extends container

block content
	section.hero(style="background-color:#F5F7FA")
		.hero-content
			.container
				h1.title
					| 章節教室
				h2.subtitle
					| 企業資源規劃 ENTERPRISE RESOURCE PLANNING
	hr
	center
		span.select
			select#selector
				- for( var i = 0; i < vedio.length; i++ )
					option(value=(i+1))= vedio[i].title
	hr
	section#notify.hero.is-medium.is-primary.is-bold
		.hero-content
			.container
				h1.title
					| 請在上方選擇對應的課程名稱
				h2.subtitle
					| 搜尋簡報 + 課程影片

	// vedio
	#wrapper(style='display:none')
		h1.title#vedioTitle
		h2.subtitle#vedioSubTitle
			|    
			span.tag.is-success#vedioTag
		center
			iframe#vedioIframe(width='854', height='480', src='', frameborder='0', allowfullscreen='')
		br
		hr
		br
		h1.title#pptTitle
		h2.subtitle#pptSubTitle
		center
			iframe#pptIframe(src='http://docs.google.com/gview?url=@url@&embedded=true', style='width:900px; height:500px;', frameborder='0')

	block javaScript
		script(src='./json/ppts.js')
		script(src='./json/vedios.js')
		script(src='https://code.jquery.com/jquery-2.1.4.min.js')
		script(src='./asset/javascripts/getQueryParams.js')
		script(src='./asset/javascripts/room.js')
	
	hr
	include footer
