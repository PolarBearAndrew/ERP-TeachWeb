extends container

block content
	.tabs.is-boxed
		ul
			li
				a(href='./ppts.html')
					i.fa.fa-cube
					|  基本模組
			li.is-active
				a
					i.fa.fa-cubes
					|  配銷模組
	- for (var i = 0; i < data.length; i++)
		- var ppt = data[i];
		h1.title= ppt.title
		h2.subtitle= ppt.subTitle
		center
			iframe(src='http://docs.google.com/gview?url=' + ppt.url + '&embedded=true', style='width:900px; height:500px;', frameborder='0')
		br
		hr 
		br
	include footer
		
